<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
      PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<!-- 참고
		<![CDATA[ 쿼리문 ]]>
		쿼리문에 비교연산자(  > >= < <= )가 포함되어 있는 경우
		문자열로 취급하기위해서   <![CDATA[     ]]> 안에 쿼리문을 작성한다
 --> 
 
<!-- member테이블 관련 DML작업을 하는 쿼리문 --> 
<mapper namespace="board">
	<select id="noticeList" resultType="BoardDTO">
		SELECT NOTICE_NO, NOTICE_TITLE, NOTICE_CONTENT, NOTICE_COUNT, NOTICE_SHOW FROM NOTICE WHERE NOTICE_SHOW ='y'
	</select>
</mapper> 



  